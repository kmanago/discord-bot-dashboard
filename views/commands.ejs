<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">

  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700,900" rel="stylesheet">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
  <link rel="stylesheet" href="../src/styles.css">

</head>

<body>
  <%- include('./templates/nav'); %>

  <div class="container justify-content-center">
    <br>
     <div class=row style="margin-top:10px">
       <div class="col-3">
          <h1><b>Commands</b></h1>
          <h5>Legend</h5>  
          <code>command &lt;required arg&gt; [optional arg]</code>
       </div>
  
        <div class="col-8">
          
            
        </div>
    
    </div>
      <hr style="background:white">

     
    <% const help = {};
      data.commands.forEach((command) => {
      const cat = command.category;
      if (!help.hasOwnProperty(cat)) help[cat] = [];
      help[cat].push(command);
    });
    %>

    

    
    <div class="row" style="margin-top:20px;">
      <div class="col-3">
        <div class="list-group" id="list-tab" role="tablist">
          <% for (const category in help) { %>
          <a class="list-group-item list-group-item-action" id="list-<%= category %>-list" data-toggle="list"
            href="#list-<%= category %>" role="tab" aria-controls=<%= category %>><b><%= category %></b></a>
          <% } %>
        </div>
      </div>

      <div class="col">
        <div class="tab-content" id="nav-tabContent">
          <% for (const category in help) { %>
          <div class="tab-pane fade" id="list-<%= category %>" role="tabpanel"
            aria-labelledby="list-<%= category %>-list">

            <table class="table table-hover table-striped">

              <thead>
                <tr class="table-success">
                  <th scope="col">Command Name</th>
                  <th scope="col">Description</th>
                  <th scope="col">Usage</th>
                </tr>
              </thead>

              <tbody>
                <% for (const command of help[category]) { %>
                <tr>
                  <td><%= command.name %> </td>
                  <td><%= command.description %> </td>
                  <td><%= command.usage %></td>
                </tr>
                <% } %>
              </tbody>

            </table>

          </div>
          <% } %>
        </div>

      </div>
    </div>





    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="../scripts/dashboard.js"></script>
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  </div>
</body>

</html>