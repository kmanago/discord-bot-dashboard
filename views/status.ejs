<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="shortcut icon" type="image/png" href="https://i.imgur.com/jyGY3Y9.png" />
    <meta charset="UTF-8">
    <title>Status</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700,900" rel="stylesheet">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <meta name="author" content="Julian Yaman">
    <meta name="description"
        content="A tool for Discord.js bot developers to manage their bot for development and final release usages.">
    <link rel="stylesheet" href="../styles/styles.css">
</head>

<body>
    <%- include('./templates/nav'); %>

    <div class="container justify-content-center">

        <div class=row style="margin-top:10px">
            <div class="col-3">
                <br>
                <div class="page-header">
                    <h1><b>Status Page</b></h1>
                </div>
            </div>
        </div>
        <hr style="background:white">


        <!-- page content -->




        <% if(botData.maintenance === true){ %>
        <div class="alert alert-danger">
            <h3>Currently the bot is under maintenance!</h3>
        </div>
        <% }else if(data.user.localPresence.status === "online"){ %>
        <div class="alert alert-success">
            <h3>All systems are working!</h3>
        </div>
        <% }else if(data.user.localPresence.status === "idle"){ %>
        <div class="alert alert-success">
            <h3>All systems are working!</h3>
        </div>
        <% }else if(data.user.localPresence.status === "dnd"){ %>
        <div class="alert alert-success">
            <h3>All systems are working!</h3>
        </div>
        <% }else if(data.user.localPresence.status === "invisible"){ %>
        <div class="alert alert-light">
            <h3>Invisible (Bot is invisible in the member list)</h3>
        </div>
        <% }%>


        <div class="jumbotron">


            <h4 class="display-3"><img src="<%= data.user.avatarURL %>" width="64px"
                    class="statusPageBotInforamtion_avatar"> <b><%= data.user.username %></b></h4>
            <p class="lead"><b>Author:</b> <%= dev.tag %>
                <br> <b>Created:</b><br> <%= data.user.createdAt %></p>
            <br>
            <hr style="background:white"> <br>
            <h4>Stats</h4>
            <h5><span class="bot_status"><b>Status:</b>
                    <% if(data.user.localPresence.status === "online"){ %>
                    <div class="statusSymbolStatusPage statusSymbolOnline"></div> Online
                    <% }else if(data.user.localPresence.status === "idle"){ %>
                    <div class="statusSymbolStatusPage statusSymbolIdle"></div> Idle
                    <% }else if(data.user.localPresence.status === "dnd"){ %>
                    <div class="statusSymbolStatusPage statusSymbolDND"></div> Do Not Disturb
                    <% }else if(data.user.localPresence.status === "invisible"){ %>
                    <div class="statusSymbolStatusPage statusSymbolInvisible"></div> Invisible
                    <% }%>
                </span></h5>
            <h5><b>Game:</b> <%= data.user.localPresence.game.name %></h5>
            <h5></h5>
            <h5><b>Number of Commands: </b> <%= commands.size %></h5>
            <h5><b>Up since:</b><br> <%= data.readyAt %></h5>
            <h5><b>Version:</b> <%= botData.bot_version %></h5>
            <br>
            <hr style="background:white"> <br>
            <h4>Bot online in the following guilds:</h4>
            <%  let glds = data.guilds;
                                glds.map(function (a) {
                                %>
            <p>&raquo; <b><%= a.name %></b></p>
            <%
                                })
                                %>
        </div>



    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="../scripts/dashboard.js"></script>
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</body>

</html>